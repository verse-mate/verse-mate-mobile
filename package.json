{
  "name": "verse-mate-mobile",
  "main": "expo-router/entry",
  "version": "1.0.2",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "format": "biome format --write app components hooks constants utils types scripts __tests__",
    "lint": "biome check app components hooks constants utils types scripts __tests__ && eslint .",
    "lint:fix": "biome check --write app components hooks constants utils types scripts __tests__ && eslint --fix .",
    "type-check": "tsc --noEmit",
    "test": "cross-env EXPO_USE_STATIC_RENDERING=1 jest",
    "test:watch": "cross-env EXPO_USE_STATIC_RENDERING=1 jest --watch",
    "test:coverage": "cross-env EXPO_USE_STATIC_RENDERING=1 jest --coverage",
    "test:ci": "cross-env EXPO_USE_STATIC_RENDERING=1 jest --ci --coverage --maxWorkers=2",
    "test:slow": "cross-env EXPO_USE_STATIC_RENDERING=1 RUN_SLOW_TESTS=1 NODE_OPTIONS=--max-old-space-size=8192 jest --testPathPattern=\\.slow\\. --no-coverage",
    "storybook:generate": "sb-rn-get-stories",
    "chromatic:deploy": "chromatic --build-script-name storybook:generate",
    "maestro:test": "maestro test .maestro",
    "maestro:test:ios": "maestro test .maestro --device 'iPhone 15'",
    "maestro:test:android": "maestro test .maestro --device emulator-5554",
    "maestro:studio": "maestro studio",
    "capture:page": "bun run scripts/visual-reference/capture-page.ts",
    "capture:journey": "bun run scripts/visual-reference/capture-journey-replay.ts",
    "generate:api": "npx @hey-api/openapi-ts",
    "diagnose:google-sso": "bun run scripts/diagnose-google-sso.ts",
    "prepare": "husky",
    "validate": "bun run lint && bun run type-check && bun run test"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-community/slider": "5.0.1",
    "@react-native-google-signin/google-signin": "^16.0.0",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@tanstack/react-query": "^5.90.2",
    "axios": "^1.12.2",
    "expo": "~54.0.27",
    "expo-apple-authentication": "~8.0.8",
    "expo-application": "~7.0.8",
    "expo-clipboard": "~8.0.8",
    "expo-constants": "~18.0.11",
    "expo-dev-client": "~6.0.20",
    "expo-device": "~8.0.10",
    "expo-file-system": "~19.0.20",
    "expo-font": "~14.0.10",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-linking": "~8.0.10",
    "expo-localization": "~17.0.8",
    "expo-location": "~19.0.8",
    "expo-navigation-bar": "~5.0.10",
    "expo-router": "~6.0.17",
    "expo-sensors": "~15.0.8",
    "expo-sharing": "~14.0.8",
    "expo-splash-screen": "~31.0.12",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "~1.0.8",
    "expo-system-ui": "~6.0.9",
    "expo-updates": "~29.0.14",
    "expo-web-browser": "~15.0.10",
    "jwt-decode": "^4.0.0",
    "posthog-react-native": "^4.13.0",
    "posthog-react-native-session-replay": "^1.2.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-modal": "^14.0.0-rc.1",
    "react-native-pager-view": "^6.9.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@hey-api/openapi-ts": "^0.85.0",
    "@playwright/test": "^1.55.1",
    "@storybook/addon-ondevice-actions": "^9.1.4",
    "@storybook/addon-ondevice-backgrounds": "^9.1.4",
    "@storybook/addon-ondevice-controls": "^9.1.4",
    "@storybook/addon-ondevice-notes": "^9.1.4",
    "@storybook/react-native": "^9.1.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/bun": "^1.2.22",
    "@types/jest": "^29.5.0",
    "@types/react": "~19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@types/suncalc": "^1.9.2",
    "ajv": "^8.17.1",
    "baseline-browser-mapping": "^2.8.30",
    "chromatic": "^13.3.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.25.0",
    "eslint-config-biome": "^2.1.3",
    "eslint-config-expo": "~10.0.0",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.14",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.3",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2",
    "undici": "^7.16.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "biome check --write",
      "eslint --fix"
    ]
  },
  "bun": {
    "test": {
      "preload": "./test-setup.ts",
      "timeout": 10000
    }
  },
  "private": true
}
